{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"declaration": true,
		"outDir": "./dist",
		"sourceMap": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		//"rootDirs": [],
		//"strict": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [ "es2015", "dom" ]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"typings/main.d.ts",
		"typings/main"
	]
}
